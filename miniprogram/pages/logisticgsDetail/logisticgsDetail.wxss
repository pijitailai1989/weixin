/* pages/logisticgsDetail/logisticgsDetail.wxss */
.global{
  font-size:.8rem;
}
.logPrice{
  margin: 10px;
  border-radius: 10px;
  box-shadow:0px 2px 10px 0px rgba(206,206,206,0.5);
  letter-spacing:3rpx
}
.logPrice .quan{
  width:2rem;
  height:2rem;
  background: white;
  border-radius: 50%;
  color:#2F9AC0;
  font-size: 1rem;
  font-weight: 600;
  line-height: 2rem;
  text-align: center;
  margin-right: .5rem;
}
.logPrice>view{
  padding:10px;
  color:#AAAAAA;
}
.logPrice>view:nth-child(1){
  background: #2F9AC0;
  border-radius: 10px 10px 0 0;
  color:white;
  font-size: 1rem
}
.logPrice .leftText{
  flex:1;
}
.logPrice .rightText{
  width:7rem;
}
.tabText{
  border-radius: 2rem;
  height:2.5rem;
  background:#EDEDED;
  width:13rem;
  margin:1.5rem auto;
}
.tabText>text{
  flex:1;
  height:2.5rem;
  line-height: 2.5rem;
  text-align:center;
  color:#626262;
}
.tabText .active{
  background: #2F9AC0;
  border-radius:2rem;
  color:white;
}
.service{
  margin:0 1rem;
}
.item{
  width:6rem;
  height:5rem;
}
.about{
  margin:0 1rem 1rem;
}
.about>text{
  color:#999999;
}